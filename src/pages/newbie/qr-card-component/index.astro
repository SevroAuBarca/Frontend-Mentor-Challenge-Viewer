---
import Layout from "../../../layouts/Layout.astro";
import "../../../styles/newbie/qr-card-component/styles.css";
import img from "../../../assets/newbie/qr-card-component/image-qr-code.png";
---

<Layout title="Qr Card Component">
  <link slot="data" rel="preconnect" href="https://fonts.googleapis.com" />
  <link
    slot="data"
    rel="preconnect"
    href="https://fonts.gstatic.com"
    crossorigin
  />
  <link
    slot="data"
    href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;700&display=swap"
    rel="stylesheet"
  />

  <div class="qr-container">
    <main>
      <img src={img} alt="qr-image" />
      <h1>Improve your front-end skills by building projects</h1>
      <p>
        Scan the QR code to visit Frontend Mentor and take your coding skills to
        the next level
      </p>
    </main>

    <footer class="attribution">
      Challenge by
      <a href="https://www.frontendmentor.io?ref=challenge" target="_blank"
        >Frontend Mentor</a
      >. Coded by
      <a href="https://github.com/SevroAuBarca" target="_BLANK"
        >Daniel Contreras</a
      >.
    </footer>
  </div>
</Layout>
